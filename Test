/* Change font color for password strength */
.password-strength-text {
    font-size: small; /* Set font size to small */
    font-weight: bold;
}

/* Define different font colors for different password strengths */
.password-weak {
    color: yellow; /* Yellow for Weak */
}

.password-moderate {
    color: orange; /* Orange for Moderate */
}

.password-strong {
    color: green; /* Green for Strong */
}
// Depending on the password strength, set the appropriate class for the text element
if (passwordStrength === "Weak") {
    document.getElementById("password-strength-text").className = "password-weak";
} else if (passwordStrength === "Moderate") {
    document.getElementById("password-strength-text").className = "password-moderate";
} else if (passwordStrength === "Strong") {
    document.getElementById("password-strength-text").className = "password-strong";
}
